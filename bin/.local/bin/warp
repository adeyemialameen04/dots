#!/bin/zsh

# Get the current status of Warp
warp_status=$(warp-cli status | grep -oP '(?<=Status update: ).*')

# Prepare options with the current status displayed as a label
chosen=$(printf "ğŸŸ¢ Current Status: %s\nï€‘  Off\nï€  On" "$warp_status" | rofi -dmenu -i -p "Warp Cli: ")

# Handle the selected option
case "$chosen" in
    "ï€‘  Off") warp-cli disconnect ;;
    "ï€  On") warp-cli connect ;;
    *) exit 1 ;;
esac
